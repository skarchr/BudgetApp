@model BudgetApp.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<div ng-controller="toastrController"></div>

<div class="container">
    
    <div class="row" style="margin-top: -10px;">

        <div class="col-md-12 text-center">

            <div id="icon" style="max-width: 360px;min-width:200px;margin-left:auto;margin-right:auto;">
                <object>
                    <img src="~/Content/images/logo.svg" id="svg" />
                </object>
            </div>

        </div>
    </div>

    <div class="row">

    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new {@name="resetPassword", @class = "form-horizontal", role = "form"}))
    {
        @Html.AntiForgeryToken()
        <h4 style="margin-bottom: 40px;" class="col-md-offset-5 col-md-7">Reset your Password</h4>
        
        @Html.HiddenFor(model => model.Code)
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new {@class = "col-md-5 control-label"})
            <div class="col-md-7">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required", @ng_model = "Email" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new {@class = "col-md-5 control-label"})
            <div class="col-md-7">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required", @ng_model = "Password" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new {@class = "col-md-5 control-label"})
            <div class="col-md-7">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "required", @ng_model = "ConfirmPassword" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-5 col-md-7">
                <input type="submit" class="btn btn-primary" value="Reset" ng-disabled="resetPassword.$invalid" />
            </div>
        </div>
    }


    </div>
</div>