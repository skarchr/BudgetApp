@model BudgetApp.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}



@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form", @name="forgotForm"}))
{
    @Html.AntiForgeryToken()    

    <div class="row" style="margin-top: -30px;">

        <div class="col-md-12 text-center" style="margin-bottom: 20px;">
            
            <div id="icon" data-logo="18" style="width:40%;min-width: 220px;">
                <object>
                    <img src="~/Content/images/logo.svg" id="svg" />
                </object>
            </div>

        </div>
    
        <div data-fade-in class="col-md-12">
            
            <h4 class="text-center">@ViewBag.Title</h4>
            
            <div class="row text-center" style="max-width: 300px; margin-left: auto;margin-right: auto;">

                <div class="col-xs-10" style="padding:10px;">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control center", @placeholder = "Email", @type = "email", @required = "required", @ng_model = "model.Email" })
                </div>
                <div class="col-xs-2">
                    <label class="control-label col-xs-12 label-validator text-danger" ng-show="forgotForm.Email.$invalid && forgotForm.Email.$touched && model.Email !== null"></label>
                    <label class="control-label col-xs-12 label-validator text-success" ng-show="forgotForm.Email.$valid"></label>
                </div>
            </div>           

            <div class="form-group">
                <div class="col-md-12 text-center">
                    <input type="submit" ng-disabled="forgotForm.$invalid" class="btn btn-primary" value="Send" />

                    @Html.ActionLink("Cancel", "Login", "Account", new { @class = "btn btn-link" })
                </div>
            </div>

        </div>
    </div>


}
