@model BudgetApp.Models.VerifyCodeViewModel
@{
    ViewBag.Title = "Verify";
}

<div ng-controller="toastrController"></div>

<div class="container">
    <div class="row" style="margin-top: -70px;">

        <div class="col-md-12 text-center">

            <div id="icon" style="width:40%;min-width: 150px;margin-left:auto;margin-right:auto;">
                <object>
                    <img src="~/Content/images/logo.svg" id="svg" />
                </object>
            </div>

        </div>
    </div>

    <div class="row">


        @using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("provider", @Model.Provider)
            @Html.Hidden("rememberMe", @Model.RememberMe)
            <h3 class="text-center">Enter verification code</h3>
            
            <div class="col-xs-12">
                
                <div style="max-width:280px !important;margin-left:auto;margin-right:auto;">
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                </div>
            </div>
            
            <div class="col-xs-12 text-center">
                <div class="checkbox" style="max-width: 280px !important;margin-left:auto;margin-right:auto;">
                    @Html.CheckBoxFor(m => m.RememberBrowser)
                    @Html.LabelFor(m => m.RememberBrowser, new { @style="float:left;" })
                </div>
            </div>
            <br />
            <div class="col-xs-12 text-center">
                <input type="submit" class="btn btn-primary" value="Submit" />
            </div>
        }


    </div>
</div>