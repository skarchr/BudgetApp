@model BudgetApp.Models.ManageLoginsViewModel
@using Microsoft.Owin.Security
@{
    ViewBag.Title = "Manage";
}

<div ng-controller="externalLoginsController">
    
    <div class="row">

        @if (Model.CurrentLogins.Count > 0)
        {
            <h4>Registered Logins</h4>

            foreach (var account in Model.CurrentLogins)
            {

                using (Html.BeginForm("RemoveLogin", "Manage"))
                {
                    @Html.AntiForgeryToken()
                    <div class="col-xs-4">
                        @Html.Hidden("loginProvider", account.LoginProvider)
                        @Html.Hidden("providerKey", account.ProviderKey)
                        <button type="submit" class="btn btn-empty" title="Remove this @account.LoginProvider login from your account">
                            <img ng-src="{{getIcon('@account.LoginProvider')}}">
                        </button>
                    </div>
                }
            }

        }
    </div>

    <hr />
    <div class="row">
        @if (Model.OtherLogins.Count > 0)
        {
            <h4>Add another service to log in.</h4>

            using (Html.BeginForm("LinkLogin", "Manage"))
            {
                @Html.AntiForgeryToken()
                <div id="socialLoginList">
                    <p>
                        @foreach (AuthenticationDescription p in Model.OtherLogins)
                        {
                            <button type="submit" class="btn btn-empty" id="@p.AuthenticationType" name="provider" value="@p.AuthenticationType" title="Log in using your @p.Caption account"><img ng-src="{{getIcon('@p.AuthenticationType')}}" /></button>
                        }
                    </p>
                </div>
            }
        }
    </div>
    @Html.ActionLink("Back", "Index", "Manage")

</div>