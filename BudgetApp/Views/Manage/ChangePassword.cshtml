@model BudgetApp.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Manage";
}

<div class="container">

    <div class="row">


        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @name="changePassword", @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 style="margin-bottom: 40px;" class="col-md-offset-5 col-md-7">Change Password</h4>
            
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-5 control-label" })
                <div class="col-md-7">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @required = "required", @ng_model = "OldPassword" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-5 control-label" })
                <div class="col-md-7">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @required = "required", @ng_model = "NewPassword" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-5 control-label" })
                <div class="col-md-7">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "required", @ng_model = "ConfirmPassword" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-5 col-md-7">
                    <input type="submit" value="Change password" class="btn btn-primary" ng-disabled="changePassword.$invalid" />
                    @Html.ActionLink("Cancel", "Index", "Manage", new { @class = "btn btn-default", @style="width:141px;" })
                </div>
            </div>
            
        }


    </div>
</div>