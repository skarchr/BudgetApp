@{
    ViewBag.Title = "Import Transactions";
}

<div>
    
    <div class="row hidden-xs hidden-sm">
        <div class="col-xs-12 col-md-offset-3 col-md-6">
            <div class="alert alert-info">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <strong>Attention!</strong>
                <br />
                The Excel spreadsheet should look something like this:
                <br />
                <br />
                <img class="col-xs-12" src="../../Content/images/screenshots/excel.PNG" alt="" />
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            

            @using (Html.BeginForm("Upload", "Transactions", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="form-member">                    
                    <div class="col-xs-12">
                        <input type="file" name="file" id="file" class="form-control" style="width: 280px;" />
                    </div>
                </div>
                <br />
                <div class="form-member">                                           
                    <div class="col-xs-12">
                        <input style="width:300px;" type="submit" name="Submit" id="Submit" class="btn btn-primary" value="Upload" />
                    </div>
                </div>

            }
        </div>
    </div>
</div>