@{
    ViewBag.Title = "Import Transactions";
}

<div style="margin-top: 60px;">

    <div class="row" style="margin-top: 30px;">
        <div class="col-xs-12">
            

            @using (Html.BeginForm("Upload", "Transactions", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="row form-member">                    
                    <div class="col-xs-12 member-control">
                        <input type="file" name="file" id="file" class="form-control" style="max-width: 300px;" />
                    </div>
                </div>
                
                <div class="row form-member">                                           
                    <div class="col-xs-12 member-control">

                        <input type="submit" name="Submit" id="Submit" class="btn btn-primary" value="Upload" />
                        @Html.ActionLink("Cancel", "Index", "Transactions", null, new { @class = "btn btn-link" })
                    </div>
                </div>


                
            }
        </div>
    </div>
</div>