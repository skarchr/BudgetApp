@using BudgetApp.Extensions
@model BudgetApp.Models.Transaction

@{
    ViewBag.Title = "Transactions";
}

<div style="margin-top: 60px;">
    <div class="row">
        <div class="col-xs-12 col-md-4">
            <a href="@Url.Action("Create")" class="btn btn-default active" title="Add transaction">
                <i class="glyphicon glyphicon-plus-sign"></i>
            </a>
            <a href="@Url.Action("Upload")" class="btn btn-default" title="Import transactions">
                <i class="glyphicon glyphicon-import"></i>
            </a>

        </div>
    </div>
    <div class="row" style="margin-top: 30px;" ng-controller="addTransactionController">
        @using (Html.BeginForm("Create", "Transactions", FormMethod.Post, new { name="addForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-xs-12">
                <div class="form-horizontal">

                    <div class="form-group">
                        <label class="control-label col-xs-12 label-validator text-danger" ng-show="addForm.Amount.$invalid && addForm.Amount.$touched" style="margin-left: -80px;"></label>
                        <label class="control-label col-xs-12 label-validator text-success" ng-show="addForm.Amount.$valid" style="margin-left: -80px;"></label>
                        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control", @required = "required", @min = "0.0001", @ng_model = "model.amount", @ng_pattern = "regexDouble" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownGroupListFor(model => model.Category, Dropdownlist.GroupedCategories(Model != null ? Model.Category.ToString() : ""), " ", new { @class = "form-control", @required = "required", @ng_model = "model.category" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @required = "required", @ng_model = "model.description" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @required = "required", @ng_model = "model.date", max = DateTime.Now.ToString("yyyy-MM-dd"), @type="date" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Add" class="btn btn-primary" ng-disabled="addForm.$invalid" />
                            @Html.ActionLink("Cancel", "Index","Transactions", null, new { @clas="btn btn-link" })
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

<script>
    (function() {
        'use strict';

        angular.module('budgetApp').factory('addTransactionModel', function() {

            return {
                model: @Html.Raw(Model.ToJson())
            };

        });

    })();
</script>