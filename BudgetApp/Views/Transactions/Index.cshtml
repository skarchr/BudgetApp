@using BudgetApp.Extensions
@model IEnumerable<BudgetApp.Models.Transaction>

@{
    ViewBag.Title = "Transactions";
}



<div style="margin-top: 60px;" ng-controller="transactionController">
    
    @if (!Model.Any())
    {

        <div class="jumbotron" fade-in="100">

            <div id="icon" style="width: 30%;">
                <object>
                    <img src="~/Content/images/logo_pig.svg" id="svg" />
                </object>
            </div>

            <h1 class="hidden-xs hidden-sm text-center" style="margin-top: -40px;">You have no transactions registered</h1>
            <h2 class="visible-xs visible-sm text-center">You have no transactions registered</h2>

            <div class="row">
                <div class="col-xs-12 col-md-6 text-center">
                    <button class="btn btn-primary btn-xlg" onclick=" location.href = '@Url.Action("Create", "Transactions")' ">
                        Add transaction
                    </button>

                </div>
                <div class="col-xs-12 col-md-6 text-center">
                    <button class="btn btn-primary btn-xlg" onclick=" location.href = '@Url.Action("Upload", "Transactions")' ">
                        Import transactions
                    </button>
                </div>
            </div>

        </div>


    }
    else
    {
        
    
    <div class="row">
        <div class="col-xs-12 col-md-4">            
            <a href="@Url.Action("Create")" class="btn btn-default" title="Add transaction">
                <i class="glyphicon glyphicon-plus-sign"></i>
            </a>
            <a href="@Url.Action("Upload")" class="btn btn-default" title="Import transactions">
                <i class="glyphicon glyphicon-import"></i>
            </a>

        </div>
        
        <div class="col-xs-12 col-md-4">
            
        </div>
        
        <div class="col-xs-12 col-md-4 text-right">
            <a href="#" class="btn btn-default" title="Annual">
                Annual
            </a>
            <a href="#" class="btn btn-default" title="Monthly">
                Monthly
            </a>
            <a href="#" class="btn btn-default" title="Weekly">
                Weekly
            </a>
            <a href="#" class="btn btn-default" title="Daily">
                Daily
            </a>
        </div>

    </div>

        <div class="row" style="margin-top: 30px;">
        
            <div class="col-xs-12">

                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Amount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.TransactionId }) |
                                @Html.ActionLink("Details", "Details", new { id = item.TransactionId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.TransactionId })
                            </td>
                        </tr>
                    }

                </table>

            </div>

        </div>
    }

          
</div>

<script>

    (function() {
        'use strict';

        angular.module('budgetApp').factory('transactionModel', function() {

            return {
                model: @Html.Raw(Model.ToJson())
            };

        });

    })();

</script>